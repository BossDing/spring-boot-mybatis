<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springbootmybatis.mapper.CityMapper">
    <resultMap id="rm" type="com.example.springbootmybatis.model.City">
        <id property="id" column="id"/>
        <result property="cityname" column="cityname"/>
        <association property="province" javaType="com.example.springbootmybatis.model.Province">
            <id property="id" column="id"/>
            <result property="provincecode" column="provincecode"/>
            <result property="provincename" column="provincename"/>
        </association>
    </resultMap>
    <select id="getCityById" parameterType="Integer" resultMap="rm">
        <![CDATA[
        select city.id, city.cityname, province.id, province.provincecode, province.provincename
          from city
          join province on city.p_id = province.id
         where city.id = #{id}
        ]]>
    </select>
</mapper>